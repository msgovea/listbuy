<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/txtUnid"
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txtUnidades"
            android:textColor="#FF0000"
            android:layout_below="@+id/nome_prod"
            android:layout_alignLeft="@+id/nome_prod"
            android:layout_alignStart="@+id/nome_prod"/>

        <ImageButton
            android:id="@+id/btn_deletar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_del2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="05dp"
            style="@style/Base.Widget.AppCompat.Button.Borderless"/>

        <TextView
            android:id="@+id/nome_prod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome do produto"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="71dp"
            android:layout_marginStart="71dp" />

        <TextView
            android:id="@+id/qtd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quantidade: 00 un"
            android:textColor="#cc000000"
            android:layout_centerVertical="true"
            android:layout_alignLeft="@+id/nome_prod"
            android:layout_alignStart="@+id/nome_prod" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/produtos"
            android:id="@+id/imagem"
            android:layout_toLeftOf="@+id/txtUnid"
            android:layout_toStartOf="@+id/txtUnid"
            android:textSize="16sp"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp"
            android:layout_alignBottom="@+id/txtUnid"
            android:layout_alignParentTop="true" />

    </RelativeLayout>


</android.support.v7.widget.CardView>