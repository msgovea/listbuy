<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="listbuy.me.listbuy">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        // Design Responsivo
        <supports-screens
            android:anyDensity="true"
            android:largeScreens="true"
            android:normalScreens="true"
            android:resizeable="true"
            android:smallScreens="true"
            android:xlargeScreens="true"
            android:screenOrientation="portrait"/>

        //Define a activity SplashScreen como a tela que ser√° chamada primeiro
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        //Tela de compartilhamento
        <activity
            android:screenOrientation="portrait"
            android:name=".SharingScreen"/>
        <activity
            android:screenOrientation="portrait"
            android:name=".SharingOffer"/>
        <activity
            android:screenOrientation="portrait"
            android:name=".WelcomeScreen"
            android:label="@string/title_activity_welcome_screen"
            android:theme="@style/MyTheme.NoActionBar">
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".MenuLateral"
            android:label="@string/app_name"
            android:theme="@style/MyTheme.NoActionBar">
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".Picture"
            android:label="@string/title_activity_picture"
            android:theme="@style/MyTheme.NoActionBar">
        </activity>

        <activity
            android:screenOrientation="portrait"
            android:name=".LoginActivity"
            android:label="@string/app_name"></activity>
        <activity
            android:screenOrientation="portrait"
            android:name=".Welcome" />
        <activity
            android:screenOrientation="portrait"
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register" />
        <activity
            android:screenOrientation="portrait"
            android:name=".MainActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/SplashTheme">
        </activity>

        <!-- talita -->
        <activity android:name=".lista.Lista_inicial">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".lista.AdicionarProdutos"
            android:label="@string/title_activity_adicionar_produtos"
            android:theme="@style/MyTheme.NoActionBar" />
        <activity android:name=".lista.DadosProdutos" />
        <activity android:name=".lista.Categorias"></activity>

        <!-- talita -->


    </application>

</manifest>